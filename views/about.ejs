<%- include('./boilerplate/header.ejs') %>
  <!-- Hospitality -->
  <div class="container-fluid mb-5">
    <div class="row title-row">
      <div class="col-lg-8 col-sm-12 title-column">
        <h1>Hospitality</h1>
        <p>IS OUR MISSION</p>
      </div>
    </div>
    <div class="row image">
      <div class="col-lg-12 image-wrapper">
        <img src="images/hero-image.jpg" />
      </div>
    </div>
  </div>
  <!-- Hospitality End -->
  <!-- Mission -->
  <div class="my-5 container">
    <div class="text-center">
      <h2>OUR MISSION</h2>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Qui, reprehenderit magnam expedita iure tempore
        excepturi labore reiciendis dolor porro hic quas officiis est corporis deleniti vel recusandae quia doloribus
        itaque facilis voluptates nulla autem explicabo dolore. Magnam illo reprehenderit quae minima, impedit tenetur
        pariatur inventore ex facilis nobis mollitia ut!</p>
    </div>
    <div class="container">
      <div class="row mission">
        <div class="col mission-left">
          <img src="/images/pexels-max-vakhtbovych-6585763.jpg" alt="">
        </div>
        <div class="col mission-right">
          <img src="/images/pexels-max-vakhtbovych-7005291.jpg" alt="">
        </div>
      </div>
    </div>
  </div>
  <!-- Mission end -->
  <!-- Discoveries -->
  <div class="container about-discoveries px-0">
    <h2 class="text-center mt-5">DISCOVERIES</h2>
    <p class="text-center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas, voluptates!</p>
    <div class="row justify-content-center mt-5">
      <%for (let i=0;i<5;i++) {%>
        <%if(i> 2) {%>
          <div class="col-lg-4 col-sm-10 d-flex justify-content-center my-5">
            <%} else {%>
              <div class="col-lg-4 col-sm-10 d-flex justify-content-center">
                <%}%>

                  <div class="card bg-transparent border-0">
                    <img src='<%=aboutProperty[i].image[0].url%>' class="card-img-top" alt="..." height="450">
                    <div class="card-body text-center">

                      <p class="card-text">
                      <h3>
                        <%=aboutProperty[i].name%>
                      </h3>
                      <p>
                        <%=aboutProperty[i].address%>
                      </p>
                      </p>
                      <button class="px-5 py-3 border-0"><a href="#">EXPLORE SPACE</a></button>
                    </div>
                  </div>
              </div>

              <%}%>
          </div>
    </div>
    <section class="container-fluid taking-time">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <img class="quote" src="/images/quote.png" />
          <h2>Taking time off is the best you can do for your
            peace of mind.</h2>
        </div>
      </div>
      <div class="row image align-items-center  plan-with-image">
        <div class="col">
          <h2>Plan a stay with us today.</h2>
          <a href="/book-now">BOOK A SPACE</a>
        </div>
      </div>
    </section>
    <section class="container-fluid hospitality-slides">
      <div class="row justify-content-center reviews">
        <div class="col-lg-6">
          <div class="reviews-slide w-70"
            data-slick='{"slidesToShow": 1, "slidesToScroll": 1,"arrows": false, "autoplay":true,"autoplaySpeed": 2000}'>
            <%for (let i=0;i<6;i++) {%>
              <div>
                <h3>
                  <%=reviews[i].content%>
                </h3>
                <p>--Guest <%=reviews[i].review%>
                </p>
              </div>
              <%}%>
          </div>
        </div>
        <div class="col-lg-5">
          <div class="reviews-slide2 w-70"
            data-slick='{"slidesToShow": 1, "slidesToScroll": 1,"arrows": false,"autoplay":true,"autoplaySpeed": 2000}'>
            <%for (let i=6;i<11;i++) {%>
              <div>
                <h3>
                  <%=reviews[i].content%>
                </h3>
                <p>--Guest <%=reviews[i].review%>
                </p>
              </div>
              <%}%>
          </div>
        </div>
      </div>
    </section>



    <%- include('./boilerplate/footer.ejs') %>